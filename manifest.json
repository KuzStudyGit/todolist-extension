{
    "name": "Todolist Extension",
    "description": "Just another todolist",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/todolist-icon_16.png",
        "32": "icons/todolist-icon_32.png",
        "48": "icons/todolist-icon_48.png",
        "128": "icons/todolist-icon_128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": ["scripting", "storage"]
}
